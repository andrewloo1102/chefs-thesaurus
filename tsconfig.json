{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@chefs-thesaurus/core": ["./packages/core/src/index.ts"],
      "@chefs-thesaurus/core/*": ["./packages/core/src/*"]
    }
  },
  "include": [
    "apps/server/src/**/*.ts",
    "packages/core/src/**/*.ts"
  ]
}

